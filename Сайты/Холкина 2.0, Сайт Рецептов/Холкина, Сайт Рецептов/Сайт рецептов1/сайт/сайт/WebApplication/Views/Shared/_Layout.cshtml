<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css/css")
    @Styles.Render("~/Content/awesome")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="navbar-inner">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" id="example-navbar-collapse">
                    <span class="sr-only">Навигация</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ГЛАВНАЯ", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
            </div>
            <div class="collapse navbar-collapse" id="example-navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Создать рецепт", "Create", "Article")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    }
                    <li>
                        @Html.ActionLink("Все рецепты", "Index", "Article")
                    </li>
                    <li class="nav-divider"></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Мои рецепты", "MyIndex", "Article")</li>
                    }

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Панель<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("Просмотр пользователей", "Index", "Account")</li>
                            }
                        </ul>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Справочники<b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Типы", "Types", "Service")</li>
                                <li>@Html.ActionLink("Категории", "Categories", "Service")</li>
                                <li>@Html.ActionLink("Ингридиенты", "Ingridients", "Service")</li>
                            </ul>
                        </li>
                    }
                    
                    <li class="nav-divider"></li>
                </ul>
                <ul class="nav navbar-nav"></ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
</nav>


<div class="container body-content" id="content">
    <div class="row-fluid">
        <br/>
        @RenderBody()
    </div>

    <hr/>
    <footer>
        <nav role="navigation" class="navbar navbar-default navbar-fixed-bottom navbar-static-top">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="https://vk.com/id29349822">Автор</a>
                </div>
                <!-- Collection of nav links and other content for toggling -->
                <div id="navbarCollapse" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active">@Html.ActionLink("Отзывы", "Index", "RecallMessage")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <span class="label label-success">Рецептов</span>
                            <span class="badge badge-warning">@Html.Action("GetCountOfAllArticles", "Article")</span>
                            <span class="label label-success">Пользователей</span>
                            <span class="badge badge-warning">@Html.Action("GetCountOfAllUsers", "Article")</span>
                            @DateTime.Now.Year – Всё права защищены
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </footer>

</div>

@*Кнопка Вверх*@
<div id="top-link">
    <a href="#top">▲ Наверх</a>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/helpdesk")
@Scripts.Render("~/bundles/jqueryui")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

<script type="text/javascript">
    
</script>
</body>
</html>
