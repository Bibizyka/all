@using Microsoft.AspNet.Identity
@using WebApplication.Service
@model WebApplication.Models.ApplicationUser

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Пользователь</h4>
    </div>
    <div class="modal-body">
        <dl class="dl-horizontal">
            <dt> @Html.DisplayNameFor(m => m.Name) </dt>
            <dd>
                @Html.DisplayFor(m => m.Name)
            </dd>
            <br/>

            <dt>
                @Html.DisplayNameFor(m => m.Avatar)
            </dt>
            <dd>
                @{
                    var yes = ApplicationUserService.GetUserAvatar(this.User.Identity.GetUserId()).IsEmpty();
                    if (!yes)
                    {
                        @Html.Raw("<img style='width:50px; height:50px;' src=\"../../Files/UserAvatarFiles/"
                                  + ApplicationUserService.GetUserAvatar(this.User.Identity.GetUserId()) + "\" />")
                    }
                    else
                    {
                        <b>Аватар не выбран</b>
                    }
                }
            </dd>
            <br />
        </dl>
    </div>
</div>