program prog7;
//Счет интеграла методом трапеций
uses crt;
var a,b,S,h,integ: real;
    i,n: integer;

//Описываем функцию
function f(x: real): real;
begin
 f:=x*x*(1-x*x);
end;

begin
 clrscr;
 a:=0;//Начальная
 b:=1;//Конечная точки
 n:=1000;//Количество измерений-трепеций. Чем больше - тем точнее измерение
 h:=(b-a)/n;//Шаг трапеции
 s:=0;//Интегральная сумма
 for i:=1 to n-1 do
  S:=s+f(a + h*i);
  
 integ:=h*((f(a)+f(b))/2+S);
 //Выводим результаты
 writeln('Интеграл функции f(x)=x*x*(1-x*x) на отрезке [',a,';',b,'],  S=',integ);
 readln;
end.
