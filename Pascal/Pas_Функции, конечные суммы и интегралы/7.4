//Вычисление конечных сумм
program prog7;
uses crt;


Var
//Используемые переменные
x,y,S,S2,a, Eps: Real;
n,m: integer;

Begin
//Изменяем значения по условию задачи
Eps:=0.00001;
x:=0.01;

Repeat
      a:= x;//Первый элемент суммы ряда
      S:=1+(-1)*x*x;//Инициализируем сумму двух первых элементовв
      For n:=2 To 100 Do
      Begin
           if (n<>2) then
           begin
                a:= a*x*(-1)/n;//Элемент ряда.
           end
           else
           begin
                a:= a*(-1)/n;
           end;
           
           S2:=S;
           S:=S+a;//Считаем сумму ряда
           //Считаем количество членов для апроксимации
           if (S-S2>Eps)   then begin m:=n end else;// фиксируем число членов n для апроксимации при Eps=0.00001
      End;
      y:= exp((-1)*x*x);
      WriteLn('x = ',x:4:2,'  сумма ряда = ',S, ';  функция = ',y,',; число членов n для апроксимации при Eps=0.00001 равно= ',m);
      Writeln('');//Пустая строка - чтобы лучше было видно
      x:= x+0.1;//Т.к. количество шагов изменения X равно 10 => шаг диапазоном в 0.1
Until x>1;//Цикл работает с шагом x:= x+0.1;, пока Х не станет больше 1.

ReadLn
End.

