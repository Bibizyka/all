program prog7;
//Используется метод половинного деления
uses crt;

var
//Используемые переменные
n:integer;//Счетчик
a,b: real;
Eps,z,f,x,y:real;

//Начало программы
begin
//Вводим переменные по условию
a:=1;
b:=2;
Eps:=0.0001-0.00001;

//Считаем первоначальное значение в точке "а"
z:=cos(2/a)-2*sin(1/a)+1/a;
n:=0;

while((b-a)>Eps)
do
  begin
     n:=n+1;
     x:=(a+b)/2;
     y:=cos(2/x)-2*sin(1/x)+1/x;

     //Проверка условия( см стр 5 из методички - метод половинного деления)
     if(y*z>0)
     then
         begin
              a:=x;
              z:=x;
         end
     else
         begin
              b:=x;
         end;
  end;

//Выводим результат
writeln('Решение: при x=',x,' f(x)=',f,', счетчик циклов = ',n);
end.

