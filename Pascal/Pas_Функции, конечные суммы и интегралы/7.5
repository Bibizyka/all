//Смотри среди работ у Кадомцева
//Вычисление конечных сумм
program prog7;
uses crt;

const
   NN = 1000;//Максимум элементов
type
   mas = array[1..NN] of integer;  //Количество элементов в массиве
Var
//Используемые переменные
a:mas;//Массив
S1,S2:integer;//Суммы четных и нечетных элементов
n,i: integer;//Количество элементов и счетчик элементов


Begin
//Инициализируем элементы
S1:=0;
S2:=0;

writeln('Введите количество элементов в массиве N=');
readln(n);//Считываем

//Вводим данные
for i:=1 to n do
begin
    writeln('Введите элемента массив №',i);
    readln(a[i]);
end;

//Считаем суммы элементов
for i:=1 to i do
begin
    if i mod 2=0 then
    begin
         S2:=S2+a[i];//Считаем четные
    end
    else
    begin
         S1:=S1+a[i];//Считаем нечетные
    end;
end;

//Выводим результат
writeln('Сумма нечетных по индексу равна S1=',S1,', а сумма четных по индексу равна S2=',S2);

End.

